generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Request {
  id        Int           @id @default(autoincrement())
  number    BigInt        @unique
  createdAt DateTime      @default(now()) @db.Timestamp(0)
  status    RequestStatus @default(PENDING)
  authorId  BigInt
  sum       Float?
  firstName String?
  lastName  String?
  User      User          @relation(fields: [authorId], references: [chatId])
}

model User {
  id            Int             @id @default(autoincrement())
  userName      String?         @unique
  firstName     String?
  lastName      String?
  chatId        BigInt          @unique
  isAdmin       Boolean         @default(false)
  isDeletedBot  Boolean         @default(false)
  NewsletterLog NewsletterLog[]
  Request       Request[]
}

model NewsletterLog {
  id           Int      @id @default(autoincrement())
  message      String
  sentCount    Int      @default(0)
  removedCount Int      @default(0)
  createdAt    DateTime @default(now())
  createdById  BigInt?
  CreateByUser User?    @relation(fields: [createdById], references: [chatId])
}

enum RequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}
